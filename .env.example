# Kindle Email Configuration
KINDLE_EMAIL=your-kindle@kindle.com

# SMTP Configuration (for sending to Kindle)
# For Gmail, use smtp.gmail.com and an app password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Test Mode (set to "true" to log email details without actually sending)
TEST_MODE=false

# Chunking Configuration
USE_AGENT_CHUNKER=false  # Use Claude Agent SDK for chunking (most context-aware)
USE_LLM_CHUNKER=true     # Use LLM API for chunking (fallback if not using agent)
TARGET_WORDS=5000
ANTHROPIC_API_KEY=your-anthropic-api-key

# Content Extraction Configuration
USE_AGENT_EXTRACTION=false  # Use Claude Agent SDK for email parsing
