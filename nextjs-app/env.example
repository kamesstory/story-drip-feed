# Supabase (local dev uses Supabase CLI, production uses cloud)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Modal API (to be configured later)
MODAL_API_URL=
MODAL_API_KEY=

# Brevo SMTP Configuration
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=<your-brevo-smtp-user>
BREVO_SMTP_PASSWORD=<your-brevo-smtp-password>

# Email Addresses
KINDLE_EMAIL=<your-kindle-email>
FROM_EMAIL=<verified-sender-email>
ADMIN_EMAIL=<your-email-for-notifications>

# App Configuration
TARGET_WORDS=8000
NODE_ENV=development

# Test Mode (set to true to send delivery emails to admin instead of Kindle)
TEST_MODE=false

# Vercel Cron Authentication (optional for local testing)
# Generate a secure random string for production
CRON_SECRET=
