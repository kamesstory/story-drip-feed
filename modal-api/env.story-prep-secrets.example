# Kindle Email Configuration
KINDLE_EMAIL=your-kindle@kindle.com

# SMTP Configuration (for sending to Kindle)
# For Gmail, use smtp.gmail.com and an app password
FROM_EMAIL=your-email@gmail.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Test Mode (set to "true" to log email details without actually sending)
TEST_MODE=false

# Chunking Configuration
USE_AGENT_CHUNKER=true   # Use Claude API for intelligent chunking (recommended)
TARGET_WORDS=8000         # Target ~8000 words per chunk (flexible based on natural breaks)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Content Extraction Configuration
USE_AGENT_EXTRACTION=true  # Use Claude API for intelligent email parsing (recommended)

# API Authentication
MODAL_API_KEY=<generate-with-openssl-rand-hex-32>
